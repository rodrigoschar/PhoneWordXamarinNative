<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
		android:id="@+id/BtnGetCoordinates"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginHorizontal="20dp"
		android:layout_marginTop="30dp"
		android:text="@string/get_coordinates"/>

	<TextView
		android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingHorizontal="20dp"
		android:paddingTop="10dp"
		android:text=""
		android:textAlignment="center"/>

	<TextView
		android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingHorizontal="20dp"
		android:paddingTop="10dp"
		android:text=""
		android:textAlignment="center"/>

	<Button
		android:id="@+id/BtnOpenMaps"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginHorizontal="20dp"
		android:layout_marginTop="30dp"
		android:text="@string/open_maps"/>

	<Button
		android:id="@+id/btnGetCoordinatesNative"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginHorizontal="20dp"
		android:layout_marginTop="50dp"
		android:text="@string/get_coordinates"/>

	<TextView
		android:id="@+id/latitudeNative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingHorizontal="20dp"
		android:paddingTop="10dp"
		android:text=""
		android:textAlignment="center"/>

	<TextView
		android:id="@+id/longitudeNative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingHorizontal="20dp"
		android:paddingTop="10dp"
		android:text=""
		android:textAlignment="center"/>

</LinearLayout>
